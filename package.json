{
  "name": "viem-foundry",
  "version": "0.1.0",
  "description": "Ethereum smart contract deployment and interaction using viem and Foundry",
  "private": true,
  "sideEffects": false,
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist",
    "!**/*.bench.ts",
    "!**/*.bench-d.ts",
    "!**/*.test.ts",
    "!**/*.test-d.ts",
    "!**/*.tsbuildinfo"
  ],
  "scripts": {
    "compile:contracts": "forge build --sizes --force",
    "copy:contracts": "mkdir -p dist/contracts && cp -r out/* dist/contracts/",
    "abi": "tsx internal/extract-abi.ts out dist/abi",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:types": "tsc -p tsconfig.types.json",
    "build:ts": "npm run build:esm && npm run build:cjs && npm run build:types",
    "build:artifacts": "npm run compile:contracts && npm run copy:contracts && npm run abi",
    "build": "npm run build:ts && npm run build:artifacts",
    "prepublishOnly": "npm run build",
    "example:deploy": "tsx examples/deploy-example.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "format": "prettier --write '**/*.ts'",
    "format:check": "prettier --check '**/*.ts'",
    "node": "anvil",
    "clean": "rm -rf cache_forge out dist"
  },
  "keywords": [
    "ethereum",
    "viem",
    "foundry",
    "smart-contracts",
    "uups",
    "ibc",
    "yui"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@datachainlab/lcp-solidity": "git+https://github.com/datachainlab/lcp-solidity.git#a2bc58e70940ca744be2083fd067d1d31051eb77",
    "@hyperledger-labs/yui-ibc-solidity": "git+https://github.com/hyperledger-labs/yui-ibc-solidity.git#semver:v0.3.40",
    "@kubernetes/client-node": "^1.4.0",
    "@openzeppelin/upgrades-core": "^1.44.2",
    "viem": "^2.41.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@fireblocks/fireblocks-web3-provider": "^1.3.19",
    "@types/node": "^24.10.3",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "js-yaml": "^4.1.1",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
